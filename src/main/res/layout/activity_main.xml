<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context="com.example.antora.ridingpritilota.MainActivity">

    <TextView
        android:textSize="36sp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:text="P R I T I L O T A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"/>






    <Button
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="I m a Driver"
        android:id="@+id/driver"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="I m a Customer"
        android:id="@+id/customer"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Distance and Rating"
        android:id="@+id/timingRating"
        />

</LinearLayout>
